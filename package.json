{
  "name": "@gleanwork/mcp-server",
  "version": "0.1.0-alpha.2",
  "description": "MCP server for Glean API integration",
  "keywords": [
    "mcp",
    "mcp-server"
  ],
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "git@github.com:gleanwork/mcp-server.git"
  },
  "license": "MIT",
  "author": "Steve Calvert <steve.calvert@glean.com>",
  "type": "module",
  "bin": {
    "glean-mcp-server": "build/index.js"
  },
  "main": "./build/index.js",
  "files": [
    "build/lib/**/*",
    "build/index.*",
    "build/types/**/*"
  ],
  "scripts": {
    "build": "rimraf build && tsc",
    "build-live": "tsc -w",
    "format": "prettier src/**/*.ts -w",
    "inspect": "npx @modelcontextprotocol/inspector node build/index.js",
    "lint": "eslint --ext ts,js --fix src",
    "prepare": "pnpm run build",
    "release": "release-it",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "node-fetch": "^2.7.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@types/node": "^18.19.80",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-plugin-prettier": "^3.4.1",
    "fs-extra": "^11.3.0",
    "globals": "^16.0.0",
    "prettier": "^2.8.8",
    "release-it": "^15.5.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=18"
  },
  "volta": {
    "node": "22.14.0",
    "pnpm": "10.6.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
